syntax enable
filetype plugin indent on

" when hitting tab key
set tabstop=4
" when indenting with '>'
set shiftwidth=4

set expandtab

set number
set relativenumber

" bindings for workman layout
nnoremap n j
nnoremap e k
nnoremap y h
nnoremap o l
onoremap n j
onoremap e k
onoremap y h
onoremap o l

" rearranging the displaced keys
nnoremap l o
nnoremap j y
nnoremap k e
